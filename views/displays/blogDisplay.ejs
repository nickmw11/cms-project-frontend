<!-- Filename: blogDisplay.ejs
     Description: File containing repeatable form for individual blogs.
     It loops through all blogs in blogArray and displays all the data
     from the table on the blog.ejs page. -->

<% blogArray.forEach(function(blog){ %>
    <div class="row">
        <div class="col-xs-12">
            <h2>Title: <%= blog.title %></h2>
            <h3>Author: <%= blog.author %></h3>
            <p><%= blog.content %></p>
            <p><%= blog.date %></p>
        </div>
    </div>
    <br />
<% }) %>